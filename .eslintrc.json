{
  "root": true,
  "extends": [
    "next/core-web-vitals",
    "plugin:tailwindcss/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "tailwindcss/no-custom-classname": "off",
    "prettier/prettier": "warn"
  },
  "settings": {
    "tailwindcss": {
      "callees": ["cn"],
      "classRegex": ".*(class|className|ClassName).*"
    }
  }
}
